@model List<Major>
<a href="/major/add">Add New Major</a>


@if (TempData["Message"] != null)
{
    @* <div class="alert alert-success">
        @TempData["Message"]
    </div> *@

    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
            <div class="toast-header">
                <img src="..." class="rounded me-2" alt="...">
                <strong class="me-auto">Success</strong>
                <small>1 mins ago</small>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body">
                <div class="alert alert-success">
                    @TempData["Message"]
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function () {
        $('.toast').toast('show');
        });
    </script>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var major in Model)
        {
            <tr>
                <td>@major.MajorId</td>
                <td>@major.MajorName</td>
                <td>
                    <a href="/major/edit/@major.MajorId">Edit</a>
                    <a href="/major/delete/@major.MajorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>