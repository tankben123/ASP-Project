<div class="card">
    <div class="card-header">
        <div class="card-title">Drag and drop Images</div>
    </div>
    <div class="card-body">
        <div id="zone">Please drop image here</div>
    </div>
</div>
<div id="rs" class="row"></div>

<style>
    #zone
    {
        width: 100%;
        height: 400px;
        border: 2px dashed #ccc;
        text-align: center;
        vertical-align:central;
    }
</style>

@section Scripts {
    <script>
        const zone = document.getElementById('zone');
        zone.ondrop = function(ev)
        {
            ev.preventDefault();
            var f = ev.dataTransfer.files[0];
            if(f != null)
            {
                var formdata = new FormData();
                formdata.append('f', f, f.name);
                $.ajax(
                    {
                        method:'post',
                        url:'/image/upload',
                        data:formdata,
                        processData:false,
                        contentType:false,
                        success: (d) =>
                        {
                            $('#rs').append(`<div class="col-2"><img src="/images/${d.imageUrl}" class="img-thumbnail"></img></div>`);
                        }
                    }
                    
                )
            }
        }
        zone.ondragover = function(ev)
        {
            ev.preventDefault();
            //console.log(ev.dataTransfer);
        }
        
    </script>
}